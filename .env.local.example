# Database
DATABASE_URL="postgresql://user:password@localhost:5432/multi_tenant_directory"

# Next Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here" # Generate with: openssl rand -base64 32

# Stripe (Get from: https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY="sk_test_..." # Test Secret Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..." # Test Publishable Key
STRIPE_WEBHOOK_SECRET="whsec_..." # Webhook signing secret (from Stripe CLI or dashboard)

# Stripe Price IDs (Create in Stripe Dashboard → Products)
STRIPE_BASIC_PRICE_ID="price_..." # Basic Plan (€29/month)
STRIPE_PRO_PRICE_ID="price_..." # Pro Plan (€79/month)
STRIPE_ENTERPRISE_PRICE_ID="price_..." # Enterprise Plan (€199/month)

# Email (SendGrid or Resend)
# Option 1: SendGrid
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="notifications@haguenau.pro"

# Option 2: Resend (Alternative)
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="notifications@haguenau.pro"

# Cloudinary (Image Upload)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIza..."

# AI Integration (Choose ONE provider)
# Provider selection: 'openai' or 'anthropic'
AI_PROVIDER="anthropic" # or "openai"

# OpenAI Configuration (if AI_PROVIDER=openai)
OPENAI_API_KEY="sk-..." # Get from: https://platform.openai.com/api-keys
OPENAI_MODEL="gpt-4o-mini" # gpt-4o-mini (cheap) or gpt-4o (quality)

# Anthropic (Claude) Configuration (if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY="sk-ant-..." # Get from: https://console.anthropic.com/
ANTHROPIC_MODEL="claude-3-5-haiku-20241022" # Fast and cost-effective

# AI Feature Flags
AI_CONTENT_GENERATION="true" # Enable AI-powered content generation
AI_REVIEW_ANALYSIS="true" # Enable AI review sentiment analysis
AI_AUTO_RESPONSES="true" # Enable AI auto-response suggestions
AI_SENTIMENT_ANALYSIS="true" # Enable AI sentiment detection

# n8n Integration (Optional - for workflow automation)
N8N_API_URL="https://netzfrance.app.n8n.cloud"
N8N_API_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." # From CLAUDE.md

# Upstash Redis (for caching and rate limiting)
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token-here"

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX" # Google Analytics 4

# Monitoring (Optional - Sentry Error Tracking)
NEXT_PUBLIC_SENTRY_DSN="https://...@sentry.io/..." # Get from: https://sentry.io/
SENTRY_ORG="your-org-name" # Optional: for source map upload
SENTRY_PROJECT="your-project-name" # Optional: for source map upload
SENTRY_AUTH_TOKEN="your-auth-token" # Optional: for source map upload

# Environment
NODE_ENV="development" # development | production | test
